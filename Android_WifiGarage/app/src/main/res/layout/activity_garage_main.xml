<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".GarageMainActivity">

    <Button
        android:text="Open"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/openGarageButton"
        android:onClick="OpenGarageBtnClick" />

    <Button
        android:text="Close"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/openGarageButton"
        android:layout_alignParentStart="true"
        android:layout_marginTop="77dp"
        android:onClick="CloseGarageBtnClick"
        android:id="@+id/closeGarageButton"/>

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@id/closeGarageButton"
        android:clickable="false">

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/openGarageIndicator"
            android:text="Garage is Open"/>
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/closeGarageIndicator"
            android:text="Garage is Closed"/>

        </RadioGroup>

</RelativeLayout>
